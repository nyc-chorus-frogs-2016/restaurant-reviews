<% if @restaurant.errors.any? %>
  <ul>
    <% @restaurant.errors.full_messages.each do |msg| %>
       <li class="error"><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @restaurant do |f| %>
  <% [:name, :cuisine, :address, :city, :state, :zip].each do |field|  %>
    <div>
      <%= f.label field %>
      <%= f.text_field field %>
    </div>
  <% end %>
  <%= f.submit %>
<% end %>

