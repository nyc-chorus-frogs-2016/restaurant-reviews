<!DOCTYPE html>
<html>
<head>
  <title>RestaurantReviews</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="flash-container">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: "flash-#{name}" %>
    <% end %>
  </div>

<%= yield %>
</body>
</html>
